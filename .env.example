# Core Configuration
NODE_ENV=development  # Change to 'production' in production environment
PORT=8080
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database

# Security (Use strong, random values in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=development_only_jwt_secret_do_not_use_in_production
JWT_EXPIRES_IN=30m  # Short-lived tokens (30 minutes)
JWT_REFRESH_EXPIRES_IN=7d

# Plaid API Configuration
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET_PRODUCTION=your_plaid_production_secret
PLAID_ENV=sandbox  # Change to 'production' for live environment
PLAID_REDIRECT_URI=http://localhost:8080/callback  # Update for production
PLAID_REDIRECT_REGISTERED=false  # Set to 'true' in production

# OpenAI API for financial insights
OPENAI_API_KEY=your_openai_api_key

# Email Service (Postmark)
POSTMARK_API_KEY=your_postmark_api_key
POSTMARK_FROM_EMAIL=support@your-domain.com
POSTMARK_TEMPLATE_ID=your_template_id

# Frontend URL for CORS (comma-separated for multiple domains)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Rate Limiting (Adjust values for production)
RATE_LIMIT_WINDOW_MS=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS=60  # Maximum requests per minute
AUTH_RATE_LIMIT_MAX=20      # Requests per minute for auth endpoints