# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-here
SESSION_SECRET=your-super-secure-session-secret-here

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Plaid Integration (for bank connections)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret-sandbox
PLAID_SECRET_PRODUCTION=your-plaid-secret-production
PLAID_ENV=production

# OpenAI (for financial insights)
OPENAI_API_KEY=your-openai-api-key

# Postmark (for email notifications)
POSTMARK_API_TOKEN=your-postmark-api-token

# Build-time Variables (VITE_ prefix required for frontend)
VITE_API_URL=https://www.tryrivu.com
VITE_PLAID_ENV=production
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# Application Settings
NODE_ENV=production
PORT=5000